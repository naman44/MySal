<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_salary"
        android:elevation="4dp"
        app:cardCornerRadius="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/blueLight"
        android:layout_height="44dp">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stateListAnimator="@animator/comment_selection"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:id="@+id/name_card_salary"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/pay_salary_card_btn"
                    android:text="Pay"
                    android:textColor="@color/greenAccent"
                    android:background="?attr/selectableItemBackground"
                    android:layout_width="60dp"
                    android:gravity="center"
                    android:layout_height="40dp" />
            </LinearLayout>

            <TextView
                android:layout_weight="1"
                android:id="@+id/to_pay_salary_card_salary"
                android:layout_width="match_parent"
                android:gravity="end"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/attendance_card_salary"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginStart="30dp"
                android:id="@+id/absent_card_salary"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginStart="30dp"
                android:id="@+id/salary_card_rest"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/salary_card_salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/salary_card_advance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/salary_card_carry_over"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="2.9"
                android:layout_marginTop="5dp"
                android:id="@+id/salary_card_penalty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/salary_card_details_btn"
                android:textSize="10dp"
                android:layout_weight="0.1"
                android:layout_gravity="end"
                android:text="Details"
                android:layout_width="55dp"
                android:layout_height="35dp" />
        </LinearLayout>

        <View
            android:id="@+id/paid_divide_line"
            android:layout_marginTop="5dp"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/salary_card_payment_details_text"
            android:text="Payment Details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/paid_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/salary_card_paid_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginStart="30dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/salary_card_paid_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/salary_card_remarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    </android.support.v7.widget.CardView>
